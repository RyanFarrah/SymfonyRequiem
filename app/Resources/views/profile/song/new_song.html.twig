{% extends 'base.html.twig' %} 

{% block body %}

    {% block header %} 
        {{ parent() }} 
    {% endblock %}

    {% block main %}

        <div class="container">

            <div class="row">
                <h1 class="mx-auto">Profil</h1>

                <div class="w-100"></div>

                <div class="mx-auto">
                    <h2 class="col-12 text-center">Téléchargez les musiques que vous souhaitez*</h2>
                    <p class="col-12 text-center">*Taille maximale: 10 Mo</p>
                </div>

            </div>

            <div class="row">

                <div class="mx-auto text-center">

                {{ form_start(form) }}

                    <div class="row">

                        {{ form_errors(form) }}

                        <div class="mx-auto text-center">
                            {{ form_row(form.audioFile) }}
                        </div>

                         <div class="w-100"></div>
                        
                        <div class="mx-auto text-center">
                            {{ form_row(form.cover) }}
                        </div>

                        <div class="w-100"></div>
                        
                        <div class="mx-auto text-center">
                            {{ form_row(form.audioName) }}
                        </div>

                        <div class="w-100"></div>

                        <div class="mx-auto text-center">
                            {{ form_end(form) }}
                        </div>

                    </div>

                </div>
            
            </div>

            {% for message in app.flashes('notice') %}
                <div class="flash-notice">
                    {{ message }}
                </div>
            {% endfor %}

    {% endblock main %}

{% endblock body %}