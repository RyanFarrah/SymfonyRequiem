{% extends 'base.html.twig' %} 

{% block body %}

    {% block header %} 
        {{ parent() }} 
    {% endblock %}

    {% block main %}

        <div class="container">
            <div class="row">
                <h1 class="mx-auto">Profil</h1>

                <div class="w-100"></div>

                <div class="mx-auto">
                    <h2 class="col-12 text-center">Téléchargez les musiques que vous souhaitez*</h2>
                    <p class="col-12 text-center">*Taille maximale: 4 Mo</p>
                </div>

            </div>

            <div class="row">
             <a href="{{ path('new_song') }}">Ajouter des nouvelles musiques</a>
            </div>

            <div class="row">

                {% if not songs is empty%}
                <h2 class="mx-auto">Et écoutez-les</h2>
                {% endif %}
                <div class="w-100"></div>
                {% for song in songs %}
                <div class="col-6">
                    <span>{{ song.audioName }}</span>
                    <audio src="{{ asset('uploads/audio/') ~ song.audioFile}}" controls></audio>
                    <a href="{{ path('edit_song', {'id': song.id}) }}">
                        Editer la chanson
                    </a>
                </div>
                {% endfor %}

            </div>
        </div>

    {% endblock main %}

{% endblock body %}
